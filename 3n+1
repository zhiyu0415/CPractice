#include <stdio.h>
#include <stdlib.h>

int main()
{
    int num=0;
    int i=0;
    int j=0;
    int cycLen=1;
    int max=0;
    scanf("%d",&i);
    scanf("%d",&j);
    if(i>j){
        int tmp =i;
        i=j;
        j=tmp;
        num=i;
    }else{
        num=i;
    }
    while(num!=1){
        if(num%2!=0){
            num=(num*3)+1;
        }else{
            num=num/2;
        }cycLen++;
    }return cycLen;
    if(max<cycLen){
        max=cycLen;
    }else{
        return max;}
        printf(max);
    return 0;
}
