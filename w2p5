#include <stdio.h>
#include<stdlib.h>
int main() {
	int num = 0;
	while (scanf("%d", &num) != EOF) {

			for (int i = 1; i <= num; i++) {
				for (int k = 0; k < (num - i); k++) {
					printf(" ");
				}
				for (int j = 1; j <= (i * 2) - 1; j++) {
					printf("*");
				}printf("\n");
			}

	}return 0;
}
